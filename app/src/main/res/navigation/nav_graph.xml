<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ListFragment">

    <fragment
        android:id="@+id/ListFragment"
        android:name="com.basalam.intern.android.ui.listOfAnimalFlower.AnimalFlowerListFragment"
        android:label="@string/fragment_label"
        tools:layout="@layout/fragment_list_animal_flower">

        <action
            android:id="@+id/action_ListFragment_to_ContentFragment"
            app:destination="@id/ContentFragment"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/fade_out"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/ContentFragment"
        android:name="com.basalam.intern.android.ui.contentOfList.ContentFragment"
        android:label="@string/fragment_label"
        tools:layout="@layout/fragment_content">

        <action
            android:id="@+id/action_ContentFragment_to_ListFragment"
            app:destination="@id/ListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_right"/>
        <argument
            android:name="model"
            app:argType="com.basalam.intern.android.ui.listOfAnimalFlower.adapter.AnimalFlowerItemModel" />

    </fragment>

</navigation>